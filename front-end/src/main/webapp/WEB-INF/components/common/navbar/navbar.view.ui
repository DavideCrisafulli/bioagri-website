                        <a class="ui-navigate nav-link {{ (current === nav.key ? 'active' : '') }}" title="{{ nav.value }}" href="/{{nav.key}}">
                            {{ nav.name }}
                        </a>
                    </li>
                <? } ?>
            </ul>

            <!-- Navigation Users -->
            <div class="ui-navbar-user d-flex w-auto">
                <span class="mdi mdi-18px mdi-shopping"></span>
                <span class="badge rounded-pill badge-notification bg-danger">1</span>
            </div>

        </div>

