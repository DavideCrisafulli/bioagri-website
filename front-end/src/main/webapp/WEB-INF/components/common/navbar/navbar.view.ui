<nav class="ui-navbar">
    <div class="ui-navbar-container">
        <div class="row align-items-center">
            <div class="col col-sm-auto">
                <a class="ui-navbar-brand">
                    {{ title }}
                </a>
            </div>
            <div class="col col-md">
                <ul class="ui-navbar-nav nav">
                    <li class="nav-item">
                        <a class="ui-navigate nav-link {{ (current === 'home'    ? 'active' : '') }}" title="{{ title }}" href="/home">
                            {{ home }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="ui-navigate nav-link {{ (current === 'catalog' ? 'active' : '') }}" title="{{ catalog }} &ndash; {{title}}" href="/catalog">
                            {{ catalog }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="ui-navigate nav-link {{ (current === 'about'   ? 'active' : '') }}" title="{{ about }} &ndash; {{title}}" href="/about">
                            {{ about }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="ui-navigate nav-link {{ (current === 'support' ? 'active' : '') }}" title="{{ support }} &ndash; {{title}}" href="/support">
                            {{ support }}
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col col-sm-auto">
                <i class="fa-shopping-bag fa-2x"></i>
            </div>
        </div>
    </div>
</nav>


