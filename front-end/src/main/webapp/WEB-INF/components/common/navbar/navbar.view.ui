        <!-- Toggle menu -->
        <button class="navbar-toggler"
                type="button"
                data-mbd-toggle="collpse"
                data-mbd-target="#ui-navbar-links"
                aria-controls="ui-navbar-links"
                aria-expanded="false"
                aria-label="Toggle navigation">

            <span class="mdi mdi-menu"></span>

        </button>


        <!-- Navigation Logo -->
        <a class="ui-navigate ui-navbar-brand navbar-brand nav-link col-4" href="/">
            <img src="{{logo}}" width="48" height="48" />
            <span>{{ title }}</span>
        </a>


        <div class="collapse navbar-collapse" id="ui-navbar-links col-8">

            <!-- Navigation Links -->
            <ul class="ui-navbar-nav navbar-nav">
                <? for (let nav of navs) { ?>
