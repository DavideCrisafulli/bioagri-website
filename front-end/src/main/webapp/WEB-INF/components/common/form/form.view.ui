<div>

    <? if ($state === 'ok') { ?>

        {{ this.innerHTML }}

    <? } else if($state === 'error') { ?>

        <h2>Si Ã¨ verificato un errore {{$reason.statusCode}}</h2>

    <? } else if($state === 'working') { ?>

        <div class="d-inline-block w-100 h-100" ui-animated>
            <div class="d-grid align-items-center h-100">
                <div class="spinner-grow m-auto" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

    <? } else { ?>

        <form class="needs-validation" novalidate>

            <?
                for(let k of Object.keys(this.state)) {

                    if(k.startsWith('$'))
                        continue;

                    const v = this.state[k];
                    const r = v.required ? 'required' : '';


                    switch(v.type) {

                        case 'text':
                        case 'email':
                        case 'password':

            ?>
                            <div class="form-floating has-validation mb-3">
                                <input type="{{v.type}}" class="form-control" id="{{k}}" placeholder="{{v.label || ''}}" {{r}} >
                                <label for="{{k}}">
                                    {{v.label || ''}}
                                </label>
                            </div>
            <?

                            break;

                        case 'checkbox':
                        case 'switch':

            ?>
                            <div class="form-check mb-3 {{v.type === 'switch' ? 'form-switch' : ''}}">
                                <input class="form-check-input" type="checkbox" value="" id="{{k}}">
                                <label class="form-check-label" for="{{k}}">
                                    {{v.label || ''}}
                                </label>
                            </div>
            <?

                            break;


                        default:
                            break;

                    }

                }
            ?>


            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3" onclick="$$.$submit(event)">{{$submit}}</button>
            </div>

        </form>

    <? } ?>
</div>