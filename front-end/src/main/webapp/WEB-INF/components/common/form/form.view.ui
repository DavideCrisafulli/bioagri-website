<div>

    <? if ($state === 'ok') { ?>

        {{ this.innerHTML }}

    <? } else if($state === 'error') { ?>

        <h2>Si Ã¨ verificato un errore {{$reason.statusCode}}</h2>

    <? } else if($state === 'working') { ?>

        <div class="d-inline-block w-100 h-100" ui-animated>
            <div class="d-grid align-items-center h-100">
                <div class="spinner-border m-auto" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

    <? } else { ?>

        <form class="needs-validation" novalidate>

            <?
                for(let k of Object.keys(this.state)) {

                    if(k.startsWith('$'))
                        continue;

                    const v = this.state[k];

            ?>
                    <div class="form-floating has-validation mb-3 ">
                        <input type="{{v.type || 'text'}}" class="form-control" id="{{k}}" placeholder="{{v.placeholder || ''}}" {{(v.required || false) ? 'required' : ''}}>
                        <label for="{{k}}">{{v.placeholder || ''}}</label>
                    </div>

            <?
                }
            ?>


            <div class="col-auto">
                <button type="button" class="btn btn-primary mb-3" onclick="$$.$submit()">{{$submit}}</button>
            </div>

        </form>

    <? } ?>
</div>