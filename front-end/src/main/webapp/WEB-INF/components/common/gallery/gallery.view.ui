<div>

    <!-- Gallery Carousel -->
    <div id="gallery-carousel" class="shadow carousel carousel-dark slide mb-4" data-ride="carousel">

        <div class="carousel-inner">

            <? let i = 0; ?>
            <? for(let image of images) { ?>

                <div id="carousel-item-{{i}}" class="carousel-item {{ i === 0 ? 'active' : ''}}">
                    <ui-image id="{{this.id}}-carousel-image-{{i}}" ui:src="{{ image }}" ui:width="100%" ui:height="50%"></ui-image>
                </div>

                <? i = i + 1; ?>

            <? } ?>

        </div>

        <a class="carousel-control-prev" onclick="$$.prevTo()" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>

        <a class="carousel-control-next" onclick="$$.nextTo()" role="button" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>

    <!-- Image Preview -->
    <div class="d-flex flex-wrap align-items-start bg-white shadow mb-4">

            <? let j = 0; ?>
            <? for(let image of images) { ?>

                <div id="carousel-image-container-{{j}}" class="p-2 flex-fill bd-highlight border mw-25 {{j === 0 ? 'border-dark' : ''}}">

                    <ui-image id="{{this.id}}-carousel-image-preview-{{j}}"
                              onclick="$$.goTo({{j}})"
                              ui:src="{{ image }}"
                              ui:width="100%"
                              ui:height="100%">
                    </ui-image>

                </div>

                <? j = j + 1; ?>

            <? } ?>

    </div>


</div>