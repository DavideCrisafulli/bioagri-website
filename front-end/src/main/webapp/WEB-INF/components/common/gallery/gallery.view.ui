<!-- Gallery Carousel -->
<div id="galleryCarousel" class="carousel carousel-dark slide" data-ride="carousel">

    <div class="carousel-inner">

        <? let i = 0; ?>
        <? for(let image of images) { ?>

            <div class="carousel-item {{ i === current ? 'active' : '' }}">
                <ui-image id="carousel-image-{{i++}}" ui:src="{{ image }}" ui:width="100%" ui:height="50%"></ui-image>
            </div>

        <? } ?>

    </div>

    <a class="carousel-control-prev" onclick="$$.nextTo()" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>

    <a class="carousel-control-next" onclick="$$.prevTo()" role="button" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

<!-- Image Preview -->
<div class="d-flex flex-wrap align-items-start">

    <div class="p-2 flex-fill bd-highlight">

        <? let j = 0; ?>
        <? for(let image of images) { ?>

            <ui-image id="{{this.id}}-carousel-image-{{j++}}-preview"
                      onclick="$$.goTo({{j++}})"
                      ui:src="{{ image }}"
                      ui:width="20%"
                      ui:height="10%"></ui-image>

        <? } ?>

    </div>

</div>