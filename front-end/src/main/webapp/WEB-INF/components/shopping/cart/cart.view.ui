<?
    const getPrice = (items) {
        return Object.values(items).reduce((i, v) => i + v.price * v.quantity, 0).toFixed(2);
    }
?>

<div>

    <h4>Carrello (FIXME)</h4>

    <?

        if(shopping_cart_empty()) {
            ?> <p class="text-muted">Il tuo carrello Ã¨ vuoto (FIXME)</p> <?
        } else {

            ?> <div class="ui-navbar-cart-popover-items"> <?

                shopping_cart_each((item) => {
                    ?> <ui-card id="{{this.id}}-card-{{item.id}}"
                                ui:id="{{item.id}}"
                                ui:quantity="{{item.quantity}}"
                                ui:view="tiny"
                                ui:on-before-update="$$.state.items[this.state.id] = ({ price: this.state.price, quantity: this.state.quantity }); $$.state = { items: $$.state.items, price: getPrice($$.state.items) }"
                                ui:on-updated="shopping_cart_add(this.state.id, this.state.quantity)" ui-animated></ui-card>
                    <?

                });

            ?> </div> <?


            ?> <div class="w-100 p-4"><h5 class="text-end">Totale ({{ count }} articoli): {{ price }} &euro;</h5></div> <?

        }
    ?>


</div>



