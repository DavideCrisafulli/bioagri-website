<div class="ui-order">

    <div class="ui-order-header">
        <h1>{{strings.title}}</h1>
    </div>

    <div class="ui-order-body">

        <? orders.forEach(e => { ?>

            <div class="ui-order-accordion">

                <div class="ui-order-accordion-item">

                    <h2 class="ui-order-accordion-item-header">
                        <button>{{strings.order}}{{e.id}}</button>
                    </h2>

                    <div class="ui-order-accordion-item-collapse">
                        <div class="ui-order-accordion-item-body">

                            <div class="ui-order-products">

                                <div class="ui-order-items">

                                    <?products[e].forEach(p => { ?>

                                        <div class="ui-order-item">
                                            <div class="ui-order-product">
                                                <ui-card id="{{this.id}}-card-{{p.id}}"
                                                         ui:id="{{p.id}}"
                                                         ui:view="row"
                                                         ui:hide="wish,cart,vote"></ui-card>
                                            </div>
                                        </div>

                                    <? }); ?>

                                </div>

                            </div>

                        </div>
                    </div>

                </div>

            </div>

        <? }); ?>

    </div>

</div>