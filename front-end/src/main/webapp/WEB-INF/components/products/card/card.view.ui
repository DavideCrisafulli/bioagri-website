<? if(view === 'row') { ?>

    <!-- Card Row -->
    <div class="ui-card">
        <div class="ui-card-row row">

            <div class="col col-4">
                <ui-image id="{{this.id}}-row-image--{{product.id}}"
                          ui:src="{{image}}"
                          ui:width="100%"
                          ui:height="100%">
                </ui-image>
            </div>

            <div class="col col-8">

                <div class="row">
                    <a href="/details"
                       ui-data="{ id: {{product.id}}, name: '{{product.name}}' }"
                       ui-navigate>
                        <h4>{{ product.name }}</h4>
                    </a>
                    <p>{{ product.price }} 	&euro;</p>
                </div>

            </div>

        </div>
    </div>

<? } else if(view === 'block') {?>

    <!-- Card Block -->
    <div class="ui-card">

        <? if(wish || cart) {?>

            <div class="ui-card-block">

                <div class="ui-card-block-icon">
                    <? if(wish) {?>
                        <div>
                            <span class="ui-card-block-icon-heart mdi mdi-heart-outline mdi-24px"
                                  onclick = "$$.onWishClicked(this)">
                            </span>
                        </div>
                    <? } ?>

                    <? if(cart) {?>
                        <div>
                            <span class="ui-card-block-icon-cart mdi mdi-cart-outline mdi-24px"></span>
                        </div>
                    <? } ?>
                </div>

            </div>

        <? } ?>

        <div class="row">
            <ui-image id="{{this.id}}-block-image-{{product.id}}"
                      class="ui-card-block-image"
                      ui:src="{{image}}"
                      ui:width="100%"
                      ui:height="100%">
            </ui-image>
        </div>

        <div class="row">
            <a href="/details"
               ui-data="{ id: {{product.id}}, name: '{{product.name}}' }"
               ui-navigate>
                <h4>{{ product.name }}</h4>
            </a>
            <p>{{ product.price }} 	&euro;</p>
        </div>

    </div>

<? } ?>

