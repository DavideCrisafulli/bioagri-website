<? if(view === 'row') { ?>

    <!-- Card Row -->
    <div class="ui-card-row">
        <div class="row">

            <div class="col">
                <ui-image id="{{this.id}}-row-image--{{product.id}}"
                          ui:src="{{image}}"
                          ui:width="100%"
                          ui:height="100%">
                </ui-image>
            </div>

            <div class="col-auto">
                <div>
                    <h4 class="d-inline p-0">
                        <a href="/details"
                           class="text-dark"
                           ui-data="{ id: {{product.id}}, name: '{{product.name}}' }"
                           ui-navigate>
                            {{ product.name }}
                        </a>
                    </h4>
                    <p class="d-inline p-0">{{ product.price }}</p>
                </div>
            </div>

        </div>
    </div>

<? } else if(view === 'block') {?>

    <!-- Card Block -->
    <div class="ui-card-block">

        <div class="row">

            <div class="row">
                <ui-image id="{{this.id}}-block-image-{{product.id}}"
                          ui:src="{{image}}"
                          ui:width="100%"
                          ui:height="100%">
                </ui-image>
            </div>

            <div class="row">
                <div>
                    <h4 class="d-inline p-0">
                        <a href="/details"
                           class="text-dark"
                           ui-data="{ id: {{product.id}}, name: '{{product.name}}' }"
                           ui-navigate>
                            {{ product.name }}
                        </a>
                    </h4>
                    <p class="d-inline p-0">{{ product.price }}</p>
                </div>
            </div>

        </div>

    </div>

<? } ?>

