<? if(view === 'row') { ?>

    <!-- Card Row -->
    <div class="ui-card">
        <div class="ui-card-row row">

            <div class="col col-4">
                <ui-image id="{{this.id}}-row-image--{{product.id}}"
                          ui:src="{{image}}"
                          ui:width="100%"
                          ui:height="100%">
                </ui-image>
            </div>

            <div class="col col-8">

                <div class="row">
                    <a href="/details"
                       ui-data="{ id: {{product.id}}, name: '{{product.name}}' }"
                       ui-navigate>
                        <h4>{{ product.name }}</h4>
                    </a>
                    <p>{{ product.price }} 	&euro;</p>
                </div>

            </div>

        </div>
    </div>

<? } else if(view === 'block') { ?>

    <!-- Card Block -->
    <div class="ui-card">
        <div class="ui-card-block">

            <? if(wish || cart) { ?>

                <div class="ui-card-block">

                    <div class="ui-card-block-icon">
                        <? if(wish) { ?>
                            <button title="{{addWish}}" onclick= "$$.onWishClicked()">
                                <span id="heart-icon-{{product.id}}" class="mdi {{likes === true ? 'mdi-heart' : 'mdi-heart-outline'}}"></span>
                            </button>
                        <? } ?>

                        <? if(cart) { ?>
                            <button title="{{addCart}}" onclick= "shopping_cart_add({{product.id}}, 1)">
                                <span class="mdi mdi-cart-outline"></span>
                            </button>
                        <? } ?>
                    </div>

                </div>

            <? } ?>

            <div class="row">
                <ui-image id="{{this.id}}-block-image-{{product.id}}"
                          class="ui-card-block-image"
                          ui:src="{{image}}"
                          ui:width="100%"
                          ui:height="50vh"
                          ui:size="cover"
                          ui:position="center">
                </ui-image>
            </div>

            <div class="row">

                <? if(tags.length > 0) { ?>
                    <? const t = tags.join() ?>
                    <div>
                        <p class="ui-card-tags">{{ t }}</p>
                    </div>
                <? } ?>

                <a href="/details"
                   ui-data="{ id: {{product.id}}, name: '{{product.name}}' }"
                   ui-navigate>
                    <h4>{{ product.name }}</h4>
                </a>

                <div>
                    <p>{{ product.price }} 	&euro;</p>
                    <? if(+product.discount !== 0) { ?>
                        <p class="ui-card-discount">{{ (+product.discount * +product.price) / 100 }}</p>
                    <? } ?>
                </div>

            </div>

        </div>
    </div>

<? } ?>

