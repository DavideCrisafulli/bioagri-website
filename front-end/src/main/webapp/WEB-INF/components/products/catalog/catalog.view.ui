<div class="ui-container">

    <div class="row">

        <!--Left MenÃ¹ -->
        <div class="col col-lg-2 d-none d-sm-block d-sm-none d-md-block d-md-none d-lg-block pt-3">

            <h4>Categorie</h4>
            <hr>

            <ul class="list-unstyled">
                <? for (let category of categories) { ?>
                    <li><a href="#" class="list-group-item list-group-item-action">{{ category.name }}</a></li>
                <? } ?>
            </ul>

            <br>

            <h4>Tags</h4>
            <hr>

            <ul class="list-unstyled">
                <? for (let tag of tags) { ?>
                <li><a href="#" class="list-group-item list-group-item-action">{{ tag.hashtag }}</a></li>
                <? } ?>
            </ul>


        </div>


        <!-- Catalog -->
        <div class="col col-md-12 col-sm-12 col-lg-10 w-sm-100 w-md-100 border pt-3 pb-5 rounded" >

            <!-- Search-->
            <div class="row">

                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-sm" type="button"><span class="mdi mdi-magnify mdi-24px"></span></button>
                    </div>
                    <input type="text" class="form-control round mt-2" placeholder="Cerca">
                </div>

            </div>

            <!-- Catalog Header-->
            <div class="row border-bottom pt-3 px-3">

                <div class="col col-5">
                    <p>4 risultati</p>
                </div>

                <div class="col col-4 float-end">

                        <div class="form-group">
                            <label for="toggle-group-sort">Ordina per:</label>
                            <select id="toggle-group-sort" class="custom-select" required>
                                <option value="recentProduct" {{ selectedSort ===  'recentProduct' ? 'selected' : '' }} >Recenti</option>
                                <option value="lowPrice" {{ selectedSort ===  'lowPrice' ? 'selected' : '' }} > Prezzo Basso</option>
                                <option value="highPrice" {{ selectedSort ===  'highPrice' ? 'selected' : '' }} >Prezzo Alto</option>
                                <option value="alphabeticalOrder1" {{ selectedSort ===  'alphabeticalOrder1' ? 'selected' : '' }} >Alfabetico(a-Z)</option>
                                <option value="alphabeticalOrder2" {{ selectedSort ===  'alphabeticalOrder2' ? 'selected' : '' }}>Alfabetico(A-z)</option>
                            </select>
                        </div>

                </div>

                <div class="col col-3 float-end">

                        <div class="form-group">
                            <label for="toggle-group-view">Visualizza:</label>
                            <select id="toggle-group-view" class="custom-select" required>
                                <option value="card" {{ selectedView ===  'card' ? 'selected' : '' }} >Griglia</option>
                                <option value="row" {{ selectedView ===  'row' ? 'selected' : '' }} >Riga</option>
                            </select>
                        </div>
                </div>

            </div>

            <!-- Products -->

            <div class="d-flex flex-wrap align-items-start" >
                <? for (let product of products) { ?>
                <div class="p-2 flex-fill bd-highlight {{ selectedView ===  'card' ? 'mw-33' : 'mw-100' }} mw-sm-100 mw-md-50">
                    <? console.log(selectedView); ?>
                    <ui-card id="ui-card-{{ product.id + '-' + selectedView }}" ui:id="{{ product.id }}" ui:view="{{ selectedView }}"></ui-card>
                </div>
                <? } ?>
            </div>

        </div>

    </div>

</div>