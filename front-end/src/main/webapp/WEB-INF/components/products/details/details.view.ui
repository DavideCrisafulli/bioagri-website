<div class="container ui-container">
        <div class="row">
            <div class="col-md-6 d-grid align-items-center">
                <img src="https://agribiositaliana.it/wp-content/uploads/2017/07/Solfato-Ferroso.png" class="img-fluid h-auto" alt="Responsive image">
            </div>
            <div class="col-md-6 pt-3" >

                <h3 class="pb-3">{{ name }}</h3>

                <div class = "d-flex flex-row py-3">

                <ui-feedback-stars id = "feedback-stars-avg" ui:id="{{id}}" ui:clickable="{{false}}" "> </ui-feedback-stars>

                </div>

                <div class = "d-flex flex-row py-3">

                    <h4><small>prezzo :</small></h4>
                    <h4> {{ price }} &euro;</h4>

                </div>

                <h6 class="py-3"> <small> DESCRIZIONE : {{ description }}</small></h6>

                    <h6><small class = "font-weight-bold py-3" >DISPONIBILI: </small> {{ stock }}</h6>

                <div>
                    <div class="w-50 py-3">

                        <h6><small class = "font-weight-bold" >QUANTITA'</small></h6>

                        <span class="input-number">
                            <input type="number" id="inputNumber1" name="inputNumber1" value="1">
                        </span>

                    </div>
                </div>

                    <div class="input-group py-3 w-50">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">KG</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01">
                            <option value="1">5</option>
                            <option value="2">10</option>
                            <option value="3">25</option>
                        </select>
                                </div>
                <div class="row py-3 gx-1">
                    <div class="col-md-10">
                        <button class="btn btn-outline-success w-100 ui-zoom-button"><span class="mdi mdi-24px mdi-cart-outline align-middle" aria-hidden="true"></span> Aggiungi al carrello </button>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-outline-danger w-100 px-0 ui-zoom-button"><span  class="mdi mdi-24px mdi-heart-outline " aria-hidden="true"></span>  </button>
                    </div>
                </div>
            </div>
            <div class = "row text-center pt-5">
                <div class="col-4">
                    <a class="ui-active">dettagli prodotto</a>
                </div>
                <div class="col-4">
                    <a class="ui-active">recensioni</a>
                </div>
                <div class="col-4">
                    <a class="ui-active">spedizione</a>
                </div>
            </div>
        </div>
    </div>