<div class="d-inline-block" style="width: {{width}}; height: {{height}}" ui-animated>

    <? if (!ready) { ?>

        <div class="d-grid align-items-center w-100 h-100">
            <div class="spinner-grow m-auto" role="status">
                <span class="visually-hidden"></span>
            </div>
        </div>

    <? } else { ?>
        <div class="{{rounded ? 'rounded' : ''}} w-100 h-100 ui-image-frame"
             style="background: url('{{src}}') {{repeat}} {{position}}; background-size: {{size}}; animation: {{animation}} 0.4s linear"></div>
    <? } ?>

</div>